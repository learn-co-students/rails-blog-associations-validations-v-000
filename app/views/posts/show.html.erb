<p id="notice"><%= notice %></p>

<p>
  <h3>Name:</h3>
  <%= @post.name %>

  <h3>Content:</h3>
  <%= @post.content %><br> 
  
  <h6>Tags:</h6>
  <u>
    <%= @post.tags.each do |tag| %>
      <li><%= tag.name %></li>
    <% end %>
  </u>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
