<p id="notice"><%= notice %></p>

<p>
  <h3><label>Name:</label></h3>
  <%= @post.name %>
</p>

<p>
  <h3><label>Content:</label></h3>
  <%= @post.content %>
</p>

<p>
  <h3><label>Tags:</label></h3>
  <% @post.tags.each do |tag| %>
  <%= tag.name %>
  <% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
