<p id="notice"><%= notice %></p>

<p>
  <h3>Name:</h3><br>
  <%= @post.name %><br>
  <h3>Content:</h3><br>
  <%= @post.content %><br>
  <% if @post.tags %>
    <h3>Tags:</h3><br>
    <ul>
      <% @post.tags.each do |tag| %>
        <li><%= tag.name %></li>
      <% end %>
    </ul>
  <% end %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
