<p id="notice"><%= notice %></p>

<p>
  <h3>Name:</h3>
  <%= @post.name %>
</p>

<h4>Content:</h4>
<%= @post.content%>
<% if @post.tags %>
  <h4>Tags:</h4>
  <ul>
    <% @post.tags.each do |tag| %>
      <li><%=tag.name%></li>
    <% end %>
  </ul>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
