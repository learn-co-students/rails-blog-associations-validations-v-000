<p id="notice"><%= notice %></p>

<p>
  <h3>Name:</h3>
  <h4><%= @post.name %></h4>
  <p><%= @post.content %></p>
  <h4><%= pluralize(@post.tags.count, "Tag") %></h4>
  <ul>
    <% @post.tags.each do |tag| %>
      <li><%= tag.name %></li>
    <% end %>
  </ul>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
