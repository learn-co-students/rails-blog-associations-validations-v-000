<p id="notice"><%= notice %></p>

<p>
  <h3>Name:</h3>
  <%= @post.name %><br>
  
  <h3>Content:</h3>
  <%= @post.content %><br>
  
  <h3>Tags:</h3>
  <ul>
    <% @post.tags.each do |tag| %>
      <li><%= tag.name %></li><br>
    <% end %>
  </ul>

</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
