<p id="notice"><%= notice %></p>

<p>
  <h3>Name:</h3>
  <%= @post.name %>
</p>

<p>
  <h3>Content:</h3>
  <%= @post.content %>
</p>

<ul>
  <% @post.tags.each do |t| %>
    <li><%= link_to t.name, tag_path(t) %></li>
  <% end %>
</ul>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
