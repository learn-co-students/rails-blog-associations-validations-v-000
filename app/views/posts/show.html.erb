<p id="notice"><%= notice %></p>

<p>
  <h3>Name:</h3>
  <%= @post.name %>
  <h3>Content:</h3>
  <%= @post.content %>
  <h3>Tag(s):</h3>

    <% @post.tag_ids.each do |tag_id| %>
       <% tag = Tag.all.find(tag_id) %>
      <p>  <%= tag.name %> </p>
    <% end %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
