<p id="notice"><%= notice %></p>

<div>
  <h3>Name: <%= @post.name %></h3>
  <p> <%= @post.content %></p>
  <h2 style="text-decoration: underline;">Tags</h2>
  <ul>
    <% @post.tags.each do |tag| %>
    <li><%= tag.name %></li>
    <% end %>
  </ul>
</div>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
