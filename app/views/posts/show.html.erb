<p id="notice"><%= notice %></p>

<p>
  <h3>Name:</h3>
  <%= @post.name %>
</p>

<p>
  <h3>Content:</h3>
  <%= @post.content %>
</p>

<% if @post.tags.any? %>
  <h3>tags:</h3>
  <% @post.tags.each do |tag| %>
  <p>
    <%= tag.name %>
  </p>
  <% end %>
<% end %>



<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
