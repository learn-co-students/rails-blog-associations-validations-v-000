<h1>New post</h1>

<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render 'form' %>

<%= form_for(@post) do |f| %>
  <div class="field<%= ' field_with_errors' if @post.errors[:name].any? %>">
    <label>Post Name:</label><br>
    <%= f.text_field :name %><br><br>
  </div>

  <div class="field<%= ' field_with_errors' if @post.errors[:content].any? %>">
    <label>Post Content:</label><br>
    <%= f.text_field :content %><br><br>
  </div>

  <div class="field<%= ' field_with_errors' if @post.errors[:released].any? %>">
    <label>Released:</label><br>
    <%= f.check_box :released %><br><br>
  </div>

  <%= f.submit %>
<% end %>

<%= link_to 'Back', posts_path %>
