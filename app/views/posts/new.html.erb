<h1>New post</h1>

<%= form_for(@post) do |f| %>

  <label>Name</label><br>
  <%= f.text_field :name, id:"Name" %><br>
  <label>Content</label><br>
  <%= f.text_field :content, id:"Content" %></br>
  <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
  <%= f.submit %>
<% end %>


<%= link_to 'Back', posts_path %>


