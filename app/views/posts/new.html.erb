<h1>New post</h1>

<%= form_for(@post) do |f| %>
<%= f.label :name %>
<%= f.text_area :name %><br><br>
<%= f.label :content %>
<%= f.text_area :content %><br><br>
<%= f.label :tag_id %>
<%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %><br><br>


<%= f.submit %>
<% end %>

<%= link_to 'Back', posts_path %>
