<h1>Post title</h1>
<%= form_for @post do |f| %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>
  <p><%= f.label :content %>
  <%= f.text_field :content %></p>
  <p><%= f.label :tag_ids %>
  <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
  <%= f.submit %>
<% end %>
<%= link_to 'Back', posts_path %>
