<h1>New Post</h1>

<%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
        <div id="error_explanation">
            <h2>There were some errors:</h2>
            <ul>
                <% @post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <br><br>

    <%= f.label :content %>
    <%= f.text_area :content %>

    <br><br>

    <h4>Tags: </h4>
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>

    <br><br>

    <%= f.submit %>

<% end %>